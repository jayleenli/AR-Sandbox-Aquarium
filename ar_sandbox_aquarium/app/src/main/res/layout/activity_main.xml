<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.java.arsandboxaquarium.ArSandboxMainActivity">
    <!-- Coordinator Layout used to position the SnackBar -->

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"></androidx.coordinatorlayout.widget.CoordinatorLayout>

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top" />

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

          <Button
              android:id="@+id/close_open_button"
              android:layout_width="100dp"
              android:layout_height="24dp"
              android:layout_gravity="center_vertical|center_horizontal"
              android:layout_marginLeft="152dp"
              android:layout_marginRight="50dp"
              android:layout_weight="3"
              android:paddingHorizontal="0dp"
              android:paddingVertical="3dp"
              android:text="▼" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_weight="0"
                android:paddingHorizontal="0dp"
                android:paddingVertical="3dp"
                android:text="Create" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/object_menu"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#03A9F4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="18dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="◀" />

            <LinearLayout
                android:layout_width="347dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="0dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/obj0"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight=".33333333"
                    android:gravity="center"
                    android:radius="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/obj0_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/obj1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight=".33333333"
                    android:gravity="center"
                    android:radius="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/obj1_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/obj2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="6dp"
                    android:layout_weight=".33333333"
                    android:gravity="center"
                    android:radius="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/obj2_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffff"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/next_button"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="18dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="▶" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

